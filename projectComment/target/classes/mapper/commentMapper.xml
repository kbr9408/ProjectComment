<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="board.mapper.CommentMapper">
    <!-- 댓글 전체 조회 -->
    <select id="selectAll" parameterType="int" resultType="comment">
  		select * from comma.comment where board_id=#{board.boardId} 
  	</select>
  	<select id="selectOne" parameterType="int" resultType="comment">
  		select * from comma.comment where comment_no = #{commentNo}
  	</select>
  	<select id="selectCount" parameterType="int" resultType="int">
  		select count(*) from comma.comment where board_id=#{board.boardId} 
  	</select>
  	<select id="selectLastOne">
  		select * from comma.comment order by comment_no desc limit 1
  	</select>
  	<insert id="insertComment" parameterType="comment">
  		insert into comma.comment(comment_writer, comment_text)
  		values (#{commentWriter},#{commentText}) where board_id=#{board.boardId}
  	</insert>
  	<update id="updateComment" parameterType="comment">
  		update comma.comment set comment_text=#{commentText} 
  		where comment_no = #{commentNo}
  	</update>
  	<delete id="deleteComment" parameterType="int">
  		delete from comma.comment where comment_no= #{commentNo}
  	</delete>
    </mapper>